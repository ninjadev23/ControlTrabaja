---
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/Auth/RegisterForm.jsx';
import NavbarPublic from '../components/Landing/NavbarPublic.astro';
---

<Layout title="Crear Cuenta">
    <nav class="flex justify-between items-center px-8 py-4 bg-white border-b border-gray-50">
        <div class="flex items-center gap-2">
            <div class="bg-blue-700 text-white font-bold p-1 rounded text-xl">CO</div>
            <span class="text-xl font-bold text-gray-800">ControlObra</span>
        </div>
        <div class="flex gap-4 items-center">
            <span class="text-sm text-gray-500 hidden md:inline">¿Ya tienes cuenta?</span>
            <a href="/login" class="text-brand-blue font-bold text-sm hover:underline">Iniciar sesión</a>
            <a href="/register" class="bg-blue-600 text-white px-5 py-2 rounded-md font-medium text-sm">Crear cuenta</a>
        </div>
    </nav>

    <main class="min-h-[calc(100vh-73px)] bg-gray-50 flex items-center justify-center p-4">
        <RegisterForm client:load />
    </main>
</Layout>